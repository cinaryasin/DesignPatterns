@model CQRSDesignPattern.CQRS.Commands.CreateProductCommand
@{
    Layout = null;
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="container">
    <br />
    <form method="post">
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="number" class="form-control" asp-for="Price" />
        <br />
        <label>Ürün Açıklama</label>
        <input type="text" class="form-control" asp-for="Description" />
        <br />
        <label>Ürün Stok</label>
        <input type="number" class="form-control" asp-for="Stock" />
        <br />
        <button class="btn btn-dark">Kaydet</button>
    </form>
</div>

