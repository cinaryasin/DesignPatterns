@model List<CQRSDesignPattern.CQRS.Results.GetProductQueryResult>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<!DOCTYPE html>

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th></th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Açıklama</th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId </td>
                <td>@item.Name </td>
                <td>@item.Price </td>
                <td>@item.Stock </td>
                <td>@item.Description </td>
                <td> <a href="/Products/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                <td> <a href="/Products/UpdateProduct/@item.ProductId" class="btn btn-warning">Güncelle</a></td>
                <td> <a href="/Products/GetProductById/@item.ProductId" class="btn btn-success">Detaylar</a></td>
            </tr>
        }
    </table>
    <a href="/Products/AddProduct/" class="btn btn-primary">Ürün Ekle</a>
</div>
